<div class="d-flex flex-column align-items-center mt-5">
  <h4>請修改你的支出</h4>
  <ul class="record-list list-group list-group-light mt-5" style="width: 600px">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div class="container record-form mt-2">
        <form action="/expense/{{ expense._id }}?_method=PUT" method="POST">
          <div class="mb-3">
            <p class="mb-3"><span class="text-danger">*</span>必填欄位</p>
            <label for="name">名稱<span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="name" name="name" placeholder="交通費"  value="{{ expense.name }}" required>
          </div>
          <div class="mb-3">
            <label for="date">日期<span class="text-danger">*</span></label>
            <input type="date" class="form-control" id="date" name="date" 
            value="{{ expense.date }}" required>
          </div>
          <div class="mb-3">
            <label for="categoryId">類別<span class="text-danger">*</span></label>
            <select class="form-control" id="categoryId" name="categoryId"  required>
              <option value="{{expense.categoryId}}" hidden="hidden">{{ expense.categoryName}}</option>
              {{#each categories}}
              <option value="{{ this._id }}">{{ this.name }}</option>
              {{/each}}
            </select>
          </div>
          <div class="mb-3">
            <label for="amount">金額<span class="text-danger">*</span></label>
            <input type="number" class="form-control" id="amount" name="amount" placeholder="輸入金額" step="0.01" value="{{ expense.amount }}" required>
          </div>
          <div class="text-center my-3">
            <button type="submit" class="btn btn-primary">送出</button>
          </div>
        </form>
      </div>
  </ul>
</div>